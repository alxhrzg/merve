{
  "dashboard": {
    "id": null,
    "uid": "mlserver-main",
    "title": "ML Server Dashboard",
    "description": "Monitoring dashboard for ML Server performance and predictions",
    "tags": ["mlserver", "machine-learning"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "5s",
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Total Predictions",
        "type": "stat",
        "targets": [
          {
            "expr": "mlserver_predictions_total{job=\"mlserver\"}",
            "refId": "A",
            "legendFormat": "{{endpoint}} ({{model}})"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0
          }
        },
        "options": {
          "colorMode": "background",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Prediction Rate (per second)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(mlserver_predictions_total{job=\"mlserver\"}[5m])",
            "refId": "A",
            "legendFormat": "{{endpoint}} predictions/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "min": 0,
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 20
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Prediction Latency",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(mlserver_prediction_duration_seconds_bucket{job=\"mlserver\"}[5m]))",
            "refId": "A",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(mlserver_prediction_duration_seconds_bucket{job=\"mlserver\"}[5m]))",
            "refId": "B",
            "legendFormat": "50th percentile"
          },
          {
            "expr": "rate(mlserver_prediction_duration_seconds_sum{job=\"mlserver\"}[5m]) / rate(mlserver_prediction_duration_seconds_count{job=\"mlserver\"}[5m])",
            "refId": "C",
            "legendFormat": "Average"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Active Requests",
        "type": "stat",
        "targets": [
          {
            "expr": "mlserver_active_requests{job=\"mlserver\"}",
            "refId": "A",
            "legendFormat": "Active"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 8,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "Model Info",
        "type": "stat",
        "targets": [
          {
            "expr": "mlserver_model_info{job=\"mlserver\"}",
            "refId": "A",
            "legendFormat": "{{model}} v{{version}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "fixed",
              "fixedColor": "blue"
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 8,
          "x": 8,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Server Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"mlserver\"}",
            "refId": "A",
            "legendFormat": "ML Server"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "mappings": [
              {"options": {"0": {"text": "DOWN"}}, "type": "value"},
              {"options": {"1": {"text": "UP"}}, "type": "value"}
            ],
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 8,
          "x": 16,
          "y": 16
        }
      }
    ]
  }
}